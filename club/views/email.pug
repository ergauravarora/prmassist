doctype html
head
  title Pug
  link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  style.
    .rowContainer {
    margin-top: 50px;
    padding: 40px;
    }
    .seprator {
    MARGIN-TOP: 12px;
    }
    .heading {
    color: #979797;
    font-weight: 600;
    font-size: 12px;
    }
    .detail {
    font-weight: 600;
    }
    #container-fluid {
    border: 2px solid gray;
    }
    .header {
    padding: 47px 0px;
    }
    .logo {
    padding: 10px;
    }
    .button {
    text-align: center;
    }
    .button a {
    background-color: blue;
    padding: 25px 20px;
    border-radius: 10px;
    }
    .btn {
    margin-top: 30px;
    }
    ul.listOfAssistance {
    margin-left: 20px;
    }
    li{
    list-style: none;
    }
    li:before {
    content: "\f111";
    font-family: FontAwesome;
    display: inline-block;
    margin-left: -1.3em;
    width: 1.3em;
    color: #2b7de1;
    }
#container-fluid.container
  .row(style='border-bottom:1px solid blue')
    .col-md-3
      img.logo(height='150px' width='150px' src='../public/logo.png')
    .col-md-9.header
      h1 PRM Booking Request
  .row
    .row.rowContainer
      .col-md-4
        h3 Personal Details
        .row.seprator
          .heading
            | First Name
          .detail
            | #{firstName}
        .row.seprator
          .heading
            | Second Name
          .detail
            | #{secondName}
        .row.seprator
          .heading
            | Email
          .detail
            | #{email}
        .row.seprator
          .heading
            | Mobile Number
          .detail
            | #{contact}
      .col-md-4
        h3 Flight Details
        .row.seprator
          .heading
            | Flight No.
          .detail
            | #{flightConfirmationDetails.flightNumber}#{flightConfirmationDetails.carrierCode} #{flightConfirmationDetails.origin} - #{flightConfirmationDetails.destination}  
        .row.seprator
          .heading
            | Date
          .detail
            | #{flightConfirmationDetails.departureDate}
      .col-md-4
        h3 Assistance Required
        .row.seprator
          ul.listOfAssistance
          - for (var i = 0; i < assistance.length; ++i) {
                li #{assistance[i]} 
                - }
      .col-md-12.btn
        .button
          a(style='color: white')
            | Confirm Booking
